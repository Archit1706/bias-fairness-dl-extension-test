{
    "name": "fairness-dl-debugger",
    "displayName": "Fairness DL Debugger",
    "description": "Deep Learning-based fairness debugging for ML datasets using PyTorch and information-theoretic analysis (DICE/NeuFair inspired)",
    "version": "1.0.0",
    "preview": true,
    "serverInfo": {
        "name": "Fairness DL Debugger",
        "module": "fairness-dl"
    },
    "publisher": "fairness-tools",
    "license": "MIT",
    "homepage": "https://github.com/Archit1706/bias-fairness-dl-extension",
    "repository": {
        "type": "git",
        "url": "https://github.com/Archit1706/bias-fairness-dl-extension.git"
    },
    "bugs": {
        "url": "https://github.com/Archit1706/bias-fairness-dl-extension/issues"
    },
    "galleryBanner": {
        "color": "#1e415e",
        "theme": "dark"
    },
    "keywords": [
        "python",
        "fairness",
        "bias",
        "machine learning",
        "deep learning",
        "pytorch",
        "ethics",
        "AI fairness",
        "discrimination detection",
        "dataset analysis"
    ],
    "engines": {
        "vscode": "^1.78.0"
    },
    "categories": [
        "Programming Languages",
        "Data Science",
        "Machine Learning",
        "Testing"
    ],
    "extensionDependencies": [
        "ms-python.python"
    ],
    "capabilities": {
        "virtualWorkspaces": {
            "supported": false,
            "description": "Virtual Workspaces are not supported with <pytool-display-name>."
        }
    },
    "activationEvents": [
        "onLanguage:python",
        "workspaceContains:*.py"
    ],
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool source-map --config ./webpack.config.js",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "format-check": "prettier --check 'src/**/*.ts' 'build/**/*.yml' '.github/**/*.yml'",
        "test": "node ./out/test/runTest.js",
        "vsce-package": "vsce package -o <pytool-module>.vsix"
    },
    "contributes": {
        "configuration": {
            "title": "Fairness DL Debugger",
            "properties": {
                "fairness-dl.training.epochs": {
                    "type": "number",
                    "default": 30,
                    "description": "Number of training epochs for the DNN model",
                    "minimum": 10,
                    "maximum": 200,
                    "scope": "resource"
                },
                "fairness-dl.training.batchSize": {
                    "type": "number",
                    "default": 32,
                    "description": "Batch size for training",
                    "minimum": 8,
                    "maximum": 256,
                    "scope": "resource"
                },
                "fairness-dl.analysis.qidThreshold": {
                    "type": "number",
                    "default": 0.1,
                    "description": "QID threshold (in bits) for flagging discriminatory instances",
                    "minimum": 0,
                    "maximum": 5,
                    "scope": "resource"
                },
                "fairness-dl.analysis.maxSamples": {
                    "type": "number",
                    "default": 500,
                    "description": "Maximum number of samples to analyze for QID metrics",
                    "minimum": 100,
                    "maximum": 10000,
                    "scope": "resource"
                },
                "fairness-dl.search.globalIterations": {
                    "type": "number",
                    "default": 50,
                    "description": "Number of iterations for global discriminatory instance search",
                    "minimum": 10,
                    "maximum": 500,
                    "scope": "resource"
                },
                "fairness-dl.search.localNeighbors": {
                    "type": "number",
                    "default": 30,
                    "description": "Number of neighbors for local discriminatory instance search",
                    "minimum": 10,
                    "maximum": 200,
                    "scope": "resource"
                },
                "fairness-dl.server.port": {
                    "type": "number",
                    "default": 8765,
                    "description": "Port number for the Python backend server",
                    "minimum": 1024,
                    "maximum": 65535,
                    "scope": "window"
                },
                "fairness-dl.detection.autoDetectProtected": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically detect protected attributes (age, gender, race, etc.)",
                    "scope": "resource"
                },
                "fairness-dl.visualization.showCharts": {
                    "type": "boolean",
                    "default": true,
                    "description": "Display interactive charts in results dashboard",
                    "scope": "resource"
                },
                "fairness-dl.visualization.theme": {
                    "type": "string",
                    "default": "dark",
                    "enum": ["dark", "light"],
                    "enumDescriptions": [
                        "Dark theme (matches VS Code dark themes)",
                        "Light theme (matches VS Code light themes)"
                    ],
                    "description": "Color theme for visualization charts",
                    "scope": "resource"
                },
                "fairness-dl.notifications.showProgress": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show progress notifications during analysis",
                    "scope": "resource"
                },
                "fairness-dl.notifications.showStatusBar": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show analysis progress in status bar",
                    "scope": "resource"
                }
            }
        },
        "commands": [
            {
                "command": "fairness-dl.analyzeDataset",
                "title": "Analyze Dataset for Fairness"
            },
            {
                "command": "fairness-dl.analyzeFromMenu",
                "title": "Fairness: Analyze This Dataset"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceExtname == .csv",
                    "command": "fairness-dl.analyzeFromMenu",
                    "group": "navigation"
                }
            ]
        }
    },
    "dependencies": {
        "@vscode/python-extension": "^1.0.5",
        "axios": "^1.13.2",
        "fs-extra": "^11.2.0",
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/glob": "^8.1.0",
        "@types/node": "20.x",
        "@types/vscode": "1.78.0",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "@vscode/test-electron": "^2.3.8",
        "@vscode/vsce": "^2.22.0",
        "eslint": "^8.56.0",
        "glob": "^10.3.10",
        "prettier": "^3.1.1",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    }
}
